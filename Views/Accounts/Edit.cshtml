@model Profile
@{
    ViewData["Title"] = "Profile";
}

<ul class="nav nav-borders" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Home</a>
    </li>
    @*  <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</a>
    </li>
    <li class="nav-item" role="presentation">
    <a class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</a>
    </li>*@
</ul>
<hr class="mt-0 mb-4">
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
        <div class="row">
            <div class="col-xl-4 col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header mb-4 py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Profile</h6>
                    </div>
                    <div class="card-body text-center __web-inspector-hide-shortcut__">
                        <img class="img-account-profile rounded-circle mb-2" height="300px" src="~/img/undraw_profile.svg" alt="">
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <button class="btn btn-primary disable" type="button">Upload new image</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-lg-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Account</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="AccountId" />
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label class="form-label">Email:</label>
                                    <input class="form-control" asp-for="Email" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="form-label">Name:</label>
                                    <input class="form-control" asp-for="Name" readonly />
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Last Name:</label>
                                    <input class="form-control" asp-for="LastName" readonly />
                                </div>
                            </div>
                            <hr class="mt-0 mb-4">
                            <div class="row mb-3">
                                <div class="col-12">
                                    <label class="form-label">Balance:</label>
                                    <input class="form-control" asp-for="Balance" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="form-label">Salary:</label>
                                    <input asp-for="Salary" class="form-control" value="@Model.Salary" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                                <div class="col-6 mb-3">
                                    <label class="form-label">Interval Days:</label>
                                    <input asp-for="IntervalDays" class="form-control" value="@Model.IntervalDays" id="intervalDays" />
						            <span asp-validation-for="IntervalDays" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label">Next Pay:</label>
                                    <input type="date" class="form-control" asp-for="NextPay" id="nextPay"/>
                                    <span asp-validation-for="NextPay" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col d-flex justify-content-between">
                                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                                    <button class="btn btn-primary disable" asp-action="Edit" asp-controller="Accounts">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">profile</div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab" tabindex="0">contact</div>
</div>
