@model Subscription
@{
	ViewData["Title"] = "Edit Subscription";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800">Transations</h1>
</div>


<div class="row">
	<div class="col">
		<div class="card shadow mb-4">
			<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				<h6 class="m-0 font-weight-bold text-dark">A transaction is an buy that is made.</h6>
			</div>
			<div class="card-body">
				<form asp-action="Edit">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<input type="hidden" asp-for="AccountId" />
					<div class="mb-3">
						<label asp-for="Name" class="form-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Amount" class="form-label"></label>
						<input asp-for="Amount" class="form-control" />
						<span asp-validation-for="Amount" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<div class="row">
							<div class="col">
								<label asp-for="Date" class="form-label"></label>
								<input asp-for="Date"  type="date" class="form-control" />
								<span asp-validation-for="Date" class="text-danger"></span>
							</div>
							<div class="col">
								<div>
									<label asp-for="NextPay" class="form-label"></label>
									<input asp-for="NextPay" class="form-control" />
									<span asp-validation-for="NextPay" class="text-danger"></span>
								</div>
							</div>
						</div>
					</div>

					<button type="submit" class="btn btn-primary">Edit</button>
					<a class="btn btn-secondary" asp-action="Index">Cancel</a>
				</form>
			</div>
		</div>

	</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}