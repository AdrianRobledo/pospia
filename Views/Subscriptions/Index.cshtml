@model IEnumerable<Subscription>
@{
	ViewData["Title"] = "Subscriptions";
}

<div class="card shadow mb-4">
	<div class="card-header py-3">
		<div class="row">
			<div class="col-11">
				<h6 class="m-0 font-weight-bold text-primary">Subscriptions</h6>
				<small>A subscription is an transaction that is carried out monthly.</small>
			</div>
			<div class="col">
				<a asp-action="Create" class="btn btn-primary mb-3">Add new</a>
			</div>
		</div>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Name</th>
						<th>Amount</th>
						<th>From</th>
						<th>Last Pay</th>
						<th>Next Pay</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var sub in Model)
					{
						<tr>
							<td>
								@sub.Name
							</td>
							<td>
								$@sub.Amount
							</td>
							<td>
								@sub.Date.ToShortDateString()
							</td>
							<td>
								@sub.LastPay.ToShortDateString()
							</td>
							<td>
								@sub.NextPay.ToShortDateString()
							</td>
							<td>
								<a asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-primary btn-icon-split">
									<span class="icon text-white-50">
										<i class="fas fa-solid fa-pen"></i>
									</span>
									<span class="text">Edit</span>
								</a>
								<a asp-action="Delete" asp-route-id="@sub.Id" class="btn btn-danger btn-icon-split">
									<span class="icon text-white-50">
										<i class="fas fa-trash"></i>
									</span>
									<span class="text">Delete</span>
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/lib/datatables/jquery.dataTables.min.js"></script>
	<script src="~/lib/datatables/dataTables.bootstrap4.js"></script>
	<script>
		$(document).ready(function () {
			$('#dataTable').DataTable({
			});
		});
	</script>
}

